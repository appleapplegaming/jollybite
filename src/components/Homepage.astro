---
import { Image } from 'astro:assets';
import logoImage from '../assets/logo.png';
---

<!-- Hero Section -->
<div class="bg-white h-35 border-b-5 border-black sticky top-0">
    <div class="flex items-center justify-between px-6 py-4">
        <!-- Logo -->
        <div class="flex items-center gap-4">
            <Image src={logoImage} alt="JollyBite Logo" class="w-28 h-26" />
            <div class="flex flex-col">
            </div>
        </div>
        
        <!-- Phone Number -->
        <div class="flex items-start flex-col text-orange-700">
            <span class="text-black font-bold text-lg">Bestellen:</span>
            <div class="flex flex-row gap-2 items-center">            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            <span class="text-lg font-semibold">06 12345678</span></div>
        </div>
    </div>
</div>

<!-- Welcome Section -->
<section class="py-16 bg-jolly-orange ">
    <div class="max-w-4xl mx-auto px-6 text-center">
        <h2 class="text-4xl font-bold text-white text-shadow-2xs mb-6">Welkom naar <span class="text-yellow-300">JollyBite</span> restaurant</h2>
        <p class="text-xl text-white  text-shadow-black">
            Het beste Syrische restaurant in 
        </p>
    </div>
</section>

<!-- Menu Download Section -->
<section class="py-16 bg-gray-50">
    <div class="max-w-4xl mx-auto px-6 text-center">
        <h2 class="text-4xl font-bold text-gray-800 mb-8">Onze Menu</h2>
        <p class="text-lg text-gray-600 mb-8">
            Ontdek onze lekkere authentieke Syrische gerechten
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a 
                href="/menu.pdf" 
                download 
                class="bg-jolly-orange text-white px-8 py-4 rounded-lg font-semibold hover:opacity-90 transition-opacity duration-200 inline-flex items-center justify-center gap-2"
            >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
                Download Menu (PDF)
            </a>
        </div>
    </div>
</section>

<!-- Contact Information Section -->
<section class="py-16 bg-white">
    <div class="max-w-6xl mx-auto px-6">
        <h2 class="text-4xl font-bold text-center text-gray-800 mb-12">Contact</h2>
        
        <!-- Contact Details in responsive grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-3 gap-8">
            <div class="flex items-start gap-4">
                <div class="bg-jolly-orange p-3 rounded-full">
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                </div>
                <div>
                    <h3 class="text-xl font-semibold text-gray-800 mb-2">Address</h3>
                    <p class="text-gray-600">
                        123 Culinary Street<br>
                        Downtown District<br>
                        City, State 12345
                    </p>
                </div>
            </div>

            <div class="flex items-start gap-4">
                <div class="bg-jolly-orange p-3 rounded-full">
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                    </svg>
                </div>
                <div>
                    <h3 class="text-xl font-semibold text-gray-800 mb-2">Phone</h3>
                    <p class="text-gray-600">(555) 123-4567</p>
                </div>
            </div>

            <div class="flex items-start gap-4">
                <div class="bg-jolly-orange p-3 rounded-full">
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                    </svg>
                </div>
                <div>
                    <h3 class="text-xl font-semibold text-gray-800 mb-2">Email</h3>
                    <p class="text-gray-600">info@jollybite.com</p>
                </div>
            </div>

            <div class="flex items-start gap-4">
                <div class="bg-jolly-orange p-3 rounded-full">
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                </div>
                <div>
                    <h3 class="text-xl font-semibold text-gray-800 mb-2">Hours</h3>
                    <div class="text-gray-600 space-y-1">
                        <p>Monday - Thursday: 11:00 AM - 10:00 PM</p>
                        <p>Friday - Saturday: 11:00 AM - 11:00 PM</p>
                        <p>Sunday: 12:00 PM - 9:00 PM</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>